{
  "name": "qume-react",
  "version": "1.1.0",
  "description": "React hooks and providers for qume event-sourced state management",
  "license": "Apache-2.0",
  "homepage": "https://github.com/qumedev/qume#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qumedev/qume.git",
    "directory": "packages/qume-react"
  },
  "bugs": {
    "url": "https://github.com/qumedev/qume/issues"
  },
  "keywords": [
    "react",
    "hooks",
    "state-management",
    "reactive",
    "event-sourcing",
    "qume",
    "typescript"
  ],
  "source": "./src/index.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "README.md",
    "CLAUDE.md",
    "docs/**"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react",
    "clean": "rm -rf dist",
    "dev": "tsup src/index.tsx --format esm,cjs --watch --dts --external react",
    "lint": "eslint \"src/**/*.ts*\"",
    "test": "jest",
    "publish": "yarn build && yarn config set npmAuthToken $NPM_TOKEN && yarn npm publish --access public"
  },
  "jest": {
    "preset": "jest-presets/jest/node",
    "testEnvironment": "jsdom"
  },
  "devDependencies": {
    "@types/jest": "^29.1.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "jest": "^29.1.0",
    "jest-presets": "*",
    "logger": "*",
    "qume": "*",
    "react": "^18.2.0",
    "tsconfig": "*",
    "tsup": "^6.2.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "jest-environment-jsdom": "^29.7.0",
    "react-test-renderer": "^18.2.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
